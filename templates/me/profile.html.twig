	<div class="row shadow-lg p-3 mb-5">
		<div class="col-lg-4">
			<div class="card mb-4 h-100">
				<div class="card-body text-center">
					{% if (app.user.avatar) %}
						<img src="{{app.user.avatar}}" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
					{% else %}
						<img class="user-avatar" src="https://st.depositphotos.com/2101611/3925/v/600/depositphotos_39258143-stock-illustration-businessman-avatar-profile-picture.jpg" class="rounded-circle img-fluid" style="width: 150px;" alt="...">
					{% endif %}
					<h5 class="my-3">{{app.user.name}}
						{{app.user.surname}}</h5>
					{% if 'ROLE_STUDENT' in app.user.roles %}
						<p class="text-muted mb-1">Klasa:
							{{app.user.className.name}}</p>
					{% elseif 'ROLE_TEACHER' in app.user.roles %}
						<p class="text-muted mb-1">Stanowisko: Nauczyciel
						</p>
						<p class="text-muted mb-4">Opole I liceum ogólnokształcące</p>
					{% elseif 'ROLE_ADMIN' in app.user.roles %}
						<p class="text-muted mb-1">Stanowisko: Administrator systemu
						</p>
						<p class="text-muted mb-4">Opole I liceum ogólnokształcące</p>
					{% else %}
						Brak roli
					{% endif %}
				</div>
			</div>
		</div>
		<div class="col-lg-8">
			<div class="card mb-4 h-100">
				<div class="card-body">
					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0">Imię</p>
						</div>
						<div class="col-sm-9">
							<p class="text-muted mb-0">{{app.user.name}}</p>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0">Nazwisko</p>
						</div>
						<div class="col-sm-9">
							<p class="text-muted mb-0">{{app.user.surname}}</p>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0">PESEL</p>
						</div>
						<div class="col-sm-9">
							<p class="text-muted mb-0">{{app.user.pesel}}</p>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0">E-mail</p>
						</div>
						<div class="col-sm-9">
							<p class="text-muted mb-0">{{app.user.email}}</p>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0">Konto utworzone</p>
						</div>
						<div class="col-sm-9">
							<p>{{ app.user.createdAt | date("d/m/Y H:i") }}</p>
						</div>
					</div>
					<hr>
					<a class="" href="{{ path('me_edit')}}">Edytuj profil</a>
				</div>

			</div>

		</div>
	</div>

{% endblock %}
